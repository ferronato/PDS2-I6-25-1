   <children>
      <GridPane layoutX="127.0" layoutY="118.0" prefHeight="174.0" prefWidth="328.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
